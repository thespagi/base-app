{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,

    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",

    "skipLibCheck": true,
    "noUnusedLocals": false,
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "types": ["node"]
  },
  "include": ["src"]
}
